<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Care_Prototype_01" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:forceDarkAllowed" tools:targetApi="q" >false</item>
        <item name="android:textViewStyle">@style/lionelTextView</item>
        <item name="android:buttonStyle">@style/lionelButton</item>
    </style>

    <style name="lionelTextView" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/font</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="lionelButton" parent="android:Widget.Button">
        <item name="android:fontFamily">@font/font</item>
        <item name="android:backgroundTint">@color/codey_button</item>
    </style>
</resources>