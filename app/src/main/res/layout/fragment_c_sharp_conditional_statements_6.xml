<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/P.Intro.ImageView1"
                android:layout_width="54dp"
                android:layout_height="74dp"
                android:layout_marginTop="24dp"
                android:contentDescription="@string/codey_image"
                app:layout_constraintStart_toStartOf="@+id/guideline_vertical1"
                app:layout_constraintTop_toBottomOf="@+id/textView12"
                app:srcCompat="@drawable/codey_python" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/questions_you_might_asked"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/P.Intro.ImageView1"
                app:layout_constraintStart_toEndOf="@+id/P.Intro.ImageView1"
                app:layout_constraintTop_toTopOf="@+id/P.Intro.ImageView1" />

            <Button
                android:id="@+id/P_loop_btnQ1"
                android:layout_width="271dp"
                android:layout_height="wrap_content"
                android:text="[add here]"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:theme="@style/lionelButton"
                app:cornerRadius="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/P.Intro.ImageView1"
                tools:ignore="TextContrastCheck" />

            <Button
                android:id="@+id/P_loop_btnQ2"
                android:layout_width="271dp"
                android:layout_height="wrap_content"
                android:text="[add here]"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:theme="@style/lionelButton"
                app:cornerRadius="10dp"
                app:layout_constraintEnd_toEndOf="@+id/P_loop_btnQ1"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/P_loop_btnQ1"
                app:layout_constraintTop_toBottomOf="@+id/P_loop_btnQ1"
                tools:ignore="TextSizeCheck,TextContrastCheck" />

            <Button
                android:id="@+id/P_loop_btnQ3"
                android:layout_width="271dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="68dp"
                android:text="[add here]"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:theme="@style/lionelButton"
                app:cornerRadius="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/P_loop_btnQ2"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/P_loop_btnQ2"
                app:layout_constraintTop_toBottomOf="@+id/P_loop_btnQ2"
                app:layout_constraintVertical_bias="0.0"
                tools:ignore="TextSizeCheck,TextContrastCheck" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_vertical1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="15dp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_vertical2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_end="15dp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_horizontal1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="15dp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_horizontal2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_end="15dp" />

            <androidx.constraintlayout.widget.Group
                android:id="@+id/group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:constraint_referenced_ids="guideline_vertical1,guideline_vertical2,guideline_horizontal1,guideline_horizontal2" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="When developing software in C#, conditions and if statements provide the necessary control over the flow of the code execution. These conditions and if statements can be leveraged to introduce complex logic and decision-making capabilities, allowing a software program to dynamically respond and adapt to changing situations. To ensure that these statements are properly implemented, one must be mindful of both the perplexity and the burstiness of the code. By creating a balance between long and short sentences, as well as complex and simple sentences, the code can achieve the desired logical coherence and flow. Such a balance helps create a highly responsive and adaptive software program."
                app:layout_constraintEnd_toStartOf="@+id/guideline_vertical2"
                app:layout_constraintStart_toStartOf="@+id/guideline_vertical1"
                app:layout_constraintTop_toTopOf="@+id/guideline_horizontal1" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>